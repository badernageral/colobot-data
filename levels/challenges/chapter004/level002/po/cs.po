#. type: Title-text
#: ../scene.txt:1
#, no-wrap
msgid "Spiral 2"
msgstr "Spirála 2"

#. type: Resume-text
#: ../scene.txt:2
#, no-wrap
msgid "Create a procedure in order to teach your bot to perform a spiral."
msgstr "Napište funkci, aby robot projel spirálovou dráhu."

#. type: ScriptName-text
#: ../scene.txt:3
#, no-wrap
msgid "Move"
msgstr "Trasa"

#. type: \b; header
#: ../help/help.E.txt:1
#, no-wrap
msgid "Exercise"
msgstr "Cvičení"

#. type: Image filename
#: ../help/help.E.txt:3
